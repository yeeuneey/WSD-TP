{
  "info": {
    "name": "GoGoStudy API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:8080"
    },
    {
      "key": "ACCESS_TOKEN",
      "value": ""
    },
    {
      "key": "REFRESH_TOKEN",
      "value": ""
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if (pm.environment.get('ACCESS_TOKEN')) {",
          "  pm.request.headers.upsert({ key: 'Authorization', value: 'Bearer ' + pm.environment.get('ACCESS_TOKEN') });",
          "}",
          "pm.request.headers.upsert({ key: 'Content-Type', value: 'application/json' });"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "url": "{{BASE_URL}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password123!\",\n  \"name\": \"\ud64d\uae38\ub3d9\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "url": "{{BASE_URL}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password123!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "if (json.accessToken) pm.environment.set('ACCESS_TOKEN', json.accessToken);",
              "if (json.refreshToken) pm.environment.set('REFRESH_TOKEN', json.refreshToken);"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth - Refresh",
      "request": {
        "method": "POST",
        "url": "{{BASE_URL}}/auth/refresh",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{REFRESH_TOKEN}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "if (json.accessToken) pm.environment.set('ACCESS_TOKEN', json.accessToken);",
              "if (json.refreshToken) pm.environment.set('REFRESH_TOKEN', json.refreshToken);"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth - Logout",
      "request": {
        "method": "POST",
        "url": "{{BASE_URL}}/auth/logout",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{REFRESH_TOKEN}}\"\n}"
        }
      }
    },
    {
      "name": "Users - Me",
      "request": {
        "method": "GET",
        "url": "{{BASE_URL}}/users/me"
      }
    },
    {
      "name": "Users - Update Profile",
      "request": {
        "method": "PATCH",
        "url": "{{BASE_URL}}/users/me",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Name\"\n}"
        }
      }
    },
    {
      "name": "Users - Change Password",
      "request": {
        "method": "PATCH",
        "url": "{{BASE_URL}}/users/me/password",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currentPassword\": \"Password123!\",\n  \"newPassword\": \"Password1234!\"\n}"
        }
      }
    },
    {
      "name": "Studies - Create",
      "request": {
        "method": "POST",
        "url": "{{BASE_URL}}/studies",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"GoGoStudy\",\n  \"description\": \"Study together\",\n  \"category\": \"BACKEND\",\n  \"maxMembers\": 20\n}"
        }
      }
    },
    {
      "name": "Studies - Join",
      "request": {
        "method": "POST",
        "url": "{{BASE_URL}}/studies/1/join"
      }
    },
    {
      "name": "Studies - Create Session",
      "request": {
        "method": "POST",
        "url": "{{BASE_URL}}/studies/1/sessions",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Week 1\",\n  \"date\": \"2025-01-01T10:00:00.000Z\"\n}"
        }
      }
    },
    {
      "name": "Studies - Record Attendance",
      "request": {
        "method": "POST",
        "url": "{{BASE_URL}}/studies/1/sessions/1/attendance",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"PRESENT\"\n}"
        }
      }
    },
    {
      "name": "Studies - Attendance Summary",
      "request": {
        "method": "GET",
        "url": "{{BASE_URL}}/studies/1/attendance/summary"
      }
    },
    {
      "name": "Admin - List Users",
      "request": {
        "method": "GET",
        "url": "{{BASE_URL}}/admin/users"
      }
    },
    {
      "name": "Admin - Update Role",
      "request": {
        "method": "PATCH",
        "url": "{{BASE_URL}}/admin/users/1/role",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"ADMIN\"\n}"
        }
      }
    },
    {
      "name": "Admin - Deactivate",
      "request": {
        "method": "PATCH",
        "url": "{{BASE_URL}}/admin/users/1/deactivate"
      }
    }
  ]
}