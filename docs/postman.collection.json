{
  "info": {
    "name": "GoGoStudy API",
    "_postman_id": "gogostudy-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" },
    { "key": "studyId", "value": "1" },
    { "key": "sessionId", "value": "1" },
    { "key": "userId", "value": "1" }
  ],
  "item": [
    {
      "name": "상태/문서",
      "item": [
        { "name": "헬스 체크", "request": { "method": "GET", "header": [], "url": "{{baseUrl}}/health" } },
        { "name": "API 스펙(JSON)", "request": { "method": "GET", "header": [], "url": "{{baseUrl}}/docs.json" } },
        { "name": "API 문서(HTML)", "request": { "method": "GET", "header": [], "url": "{{baseUrl}}/docs" } }
      ]
    },
    {
      "name": "인증",
      "item": [
        {
          "name": "회원가입",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password123!\",\n  \"name\": \"Test User\"\n}" },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "로그인",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password123!\"\n}" },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "토큰 재발급",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}" },
            "url": "{{baseUrl}}/auth/refresh"
          }
        },
        {
          "name": "로그아웃(블랙리스트)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}" },
            "url": "{{baseUrl}}/auth/logout"
          }
        },
        {
          "name": "구글 로그인",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{ \"idToken\": \"\" }" },
            "url": "{{baseUrl}}/auth/google"
          }
        }
      ]
    },
    {
      "name": "사용자",
      "item": [
        { "name": "내 프로필 조회", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/users/me" } },
        {
          "name": "이름 변경",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"name\": \"New Name\" }" },
            "url": "{{baseUrl}}/users/me"
          }
        },
        {
          "name": "비밀번호 변경",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"currentPassword\": \"Password123!\",\n  \"newPassword\": \"NewPass123!\"\n}" },
            "url": "{{baseUrl}}/users/me/password"
          }
        },
        { "name": "내 출석 기록", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/users/me/attendance" } }
      ]
    },
    {
      "name": "스터디",
      "item": [
        {
          "name": "스터디 생성",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"title\": \"Backend Study\",\n  \"description\": \"API deep dive\",\n  \"category\": \"BACKEND\",\n  \"maxMembers\": 10\n}" },
            "url": "{{baseUrl}}/studies"
          }
        },
        {
          "name": "스터디 목록(검색/정렬/페이지)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/studies?q=&category=&status=&page=1&pageSize=10&sort=createdAt:desc",
              "host": ["{{baseUrl}}"],
              "path": ["studies"],
              "query": [
                { "key": "q", "value": "" },
                { "key": "category", "value": "" },
                { "key": "status", "value": "" },
                { "key": "page", "value": "1" },
                { "key": "pageSize", "value": "10" },
                { "key": "sort", "value": "createdAt:desc" }
              ]
            }
          }
        },
        { "name": "스터디 상세", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}" } },
        {
          "name": "스터디 수정",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"title\": \"New Title\", \"maxMembers\": 12 }" },
            "url": "{{baseUrl}}/studies/{{studyId}}"
          }
        },
        { "name": "스터디 삭제", "request": { "method": "DELETE", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}" } },
        {
          "name": "스터디 상태 변경",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"status\": \"CLOSED\" }" },
            "url": "{{baseUrl}}/studies/{{studyId}}/status"
          }
        },
        {
          "name": "내 스터디(역할/상태 필터)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/studies/me?role=&status=",
              "host": ["{{baseUrl}}"],
              "path": ["studies", "me"],
              "query": [
                { "key": "role", "value": "" },
                { "key": "status", "value": "" }
              ]
            }
          }
        },
        { "name": "스터디 신청", "request": { "method": "POST", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}/join" } },
        {
          "name": "멤버 목록(리더/페이지)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/studies/{{studyId}}/members?page=1&pageSize=10&status=",
              "host": ["{{baseUrl}}"],
              "path": ["studies", "{{studyId}}", "members"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "pageSize", "value": "10" },
                { "key": "status", "value": "" }
              ]
            }
          }
        },
        {
          "name": "멤버 승인/거절(리더)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"status\": \"APPROVED\" }" },
            "url": "{{baseUrl}}/studies/{{studyId}}/members/{{userId}}/status"
          }
        },
        { "name": "멤버 제거(리더)", "request": { "method": "DELETE", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}/members/{{userId}}" } },
        { "name": "스터디 탈퇴(멤버)", "request": { "method": "POST", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}/members/leave" } },
        {
          "name": "세션 생성(리더)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"title\": \"Week 1\",\n  \"date\": \"2025-01-01T00:00:00Z\"\n}" },
            "url": "{{baseUrl}}/studies/{{studyId}}/sessions"
          }
        },
        {
          "name": "세션 수정(리더)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"title\": \"Week 1 - updated\" }" },
            "url": "{{baseUrl}}/studies/{{studyId}}/sessions/{{sessionId}}"
          }
        },
        { "name": "세션 삭제(리더)", "request": { "method": "DELETE", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}/sessions/{{sessionId}}" } },
        { "name": "세션 목록(멤버)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}/sessions" } },
        { "name": "세션 상세(멤버)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}/sessions/{{sessionId}}" } },
        {
          "name": "출석 기록(멤버)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"status\": \"PRESENT\" }" },
            "url": "{{baseUrl}}/studies/{{studyId}}/sessions/{{sessionId}}/attendance"
          }
        },
        { "name": "세션 출석 조회(리더, studyId)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}/sessions/{{sessionId}}/attendance" } },
        { "name": "세션 출석 조회(sessionId)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/sessions/{{sessionId}}/attendance" } },
        {
          "name": "출석 요약(리더, 기간옵션)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/studies/{{studyId}}/attendance/summary?from=&to=",
              "host": ["{{baseUrl}}"],
              "path": ["studies", "{{studyId}}", "attendance", "summary"],
              "query": [
                { "key": "from", "value": "" },
                { "key": "to", "value": "" }
              ]
            }
          }
        },
        { "name": "멤버별 출석 요약(리더/본인)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/studies/{{studyId}}/attendance/users/{{userId}}" } }
      ]
    },
    {
      "name": "관리자",
      "item": [
        { "name": "유저 목록(관리자)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/admin/users" } },
        {
          "name": "유저 역할 변경(관리자)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"role\": \"ADMIN\" }" },
            "url": "{{baseUrl}}/admin/users/{{userId}}/role"
          }
        },
        { "name": "유저 비활성화(관리자)", "request": { "method": "PATCH", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/admin/users/{{userId}}/deactivate" } },
        {
          "name": "스터디 목록(관리자)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/studies?status=&page=1&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "studies"],
              "query": [
                { "key": "status", "value": "" },
                { "key": "page", "value": "1" },
                { "key": "size", "value": "10" }
              ]
            }
          }
        },
        { "name": "유저 출석 조회(관리자)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/admin/users/{{userId}}/attendance" } },
        { "name": "서비스 통계(관리자)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }], "url": "{{baseUrl}}/admin/stats/overview" } }
      ]
    }
  ]
}
